{% extends 'ApplicationBundle:Default:index.html.twig' %}

{% block body %}
    <div class="col-md-8 my-3">

        <h2 class="page-header my-5">{{ articles.title }}</h2>
        <div class="card">
            <div class="card-header text-center">
                <img src="{{ asset( vich_uploader_asset(articles, 'imageFile') ) }}" width="200" alt="..." width="300">
            </div>
            <div class="card-body">
                <p class="card-text">{{ articles.description }}</p>
                <p class="card-text" style="display: inline-block;"><small class="text-muted">{{ articles.createAt | date('F jS, Y') }}</small></p>
                <p class="card-text" style="float: right"><small class="text-muted">{{ articles.category.name }}</small></p>
            </div>
        </div>

        <h3 class="my-3">Comments</h3>
        <hr>
        {% for comment in comments %}
            <p style="float: right;"><small class="text-muted">{{ comment.createdAt | date('F jS, Y') }}</small></p>
            <div class="row">
                <div class="col-md-2">
                    <h5>{{ comment.author }} :</h5>
                </div>
                <div class="col-md-10">
                    <p>{{ comment.content }}</p>
                </div>
            </div>
            <hr>
        {% endfor %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}