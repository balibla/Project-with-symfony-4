{% extends 'ApplicationBundle:Default:index.html.twig' %}

{% block body %}
    <div class="col-md-8 my-3">
        <h3 class="my-5">{{ category.name }}</h3>
        {% for article in articles %}
            <div class="card mb-3" style="width: 100%;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{ asset('images/articles/' ~ article.filename) }}" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text" style="float: right"><small class="text-muted">{{ article.category.name }}</small></p>
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.description |slice(0,200) }} ...</p>
                            <a href=" home/{{ article.id }}" class="btn btn-primary">Read More</a>
                            <p class="card-text"><small class="text-muted">{{ article.createAt | date("F j, Y") }}</small></p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}