{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-md-10">

        <h2 class="text-center my-3">Sign In</h2>
        <hr>
        <div class="card" style="width: 50%; position: relative; left: 50%;transform: translateX(-50%)">
            {% if error %}
                <div class="alert alert-danger text-center">{{ error.messageKey }}</div>
            {% endif %}
            <div class="card-body">
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="_password" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" />
                        <label for="remember_me">Keep me logged in</label>
                    </div>

                    <button class="btn btn-primary" type="submit">Sign In</button>
                </form>
            </div>
        </div>

    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
